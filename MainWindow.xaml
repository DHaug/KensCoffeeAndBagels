<Page x:Class="KensCoffeeAndBagels.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KensCoffeeAndBagels"
        mc:Ignorable="d"
        d:DesignHeight="576" d:DesignWidth="1024"
        Title="MainWindow" Background="LightBlue">
    <Grid>
        <Grid.RowDefinitions>
                <RowDefinition Height="5*"></RowDefinition>
                <RowDefinition Height="5*"></RowDefinition>
            </Grid.RowDefinitions>

        <TextBlock Text="Welcome to Ken's Coffee and Bagels! " HorizontalAlignment="Center"  FontSize="50" FontWeight="ExtraBold" Foreground="GhostWhite" Margin="0,10,0,0" Grid.Row="0"/>
        <TextBlock Text="Ready to begin your order?" HorizontalAlignment="Center"  FontSize="30" FontWeight="ExtraBold" Foreground="GhostWhite" Margin="0,200,0,0" Grid.Row="0"/>

        <Border Name="BeginOrderBorder" HorizontalAlignment="Center" Padding="0" Margin="392,72,374,151" Width="250" Height="50" CornerRadius="30" BorderThickness="1" BorderBrush="LightGreen" Background="LightBlue" Grid.Row="1">
            <Button Name="BeginOrderButton" Content="Begin!" FontSize="15" Margin="0,-1,0,0" Background="Green" BorderThickness="1" BorderBrush="Green"/>
        </Border>
    </Grid>
</Page>
